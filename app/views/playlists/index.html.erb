<div class="playlists-card">
  <% @playlists.each do |playlist| %>
    <h2> <%= playlist.name %> </h2>
    <%= link_to 'Playlist info', playlist_path(playlist) %>
    <%= link_to  'Delete playlist', playlist_path(playlist), method: :delete %>
  <% end %>
</div>

<%= link_to 'Create new playlist', new_playlist_path, class: 'btn btn-primary' %>
<%= link_to 'Back to profile', profile_path, class: 'btn btn-warning' %>
