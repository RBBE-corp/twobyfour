

    <div class="memory-list-cards-holder">
        <div class="row text-center">
          <% num = 1 %>
          <% @memory_lists.each do |memory_list|%>
              <p>
                <a class="card p-3" data-toggle="collapse" href="#collapseExample<%= num %>" role="button" aria-expanded="false" aria-controls="collapseExample">
                  <%= memory_list.name %>
                </a>
              </p>
                <div class="collapse" id="collapseExample<%= num %>">
                    <div class="card card-body">
                      <%# <div class="col-sm-8"> %>
                        <% memory_list.flashcards.each do |flashcard| %>
                            <div class="flex-container">
                                <div class="flex-child">
                                  <div class="border p-1"><%= flashcard.english_word %></div>
                                </div>
                                <div class="flex-child">=</div>
                                <div class="flex-child">
                                  <div class="border p-1"><%= flashcard.japanese_word %></div>
                                </div>
                            </div>
                        <% end %>
                      <%# </div> %>
                    </div>
                </div>
                <% num += 1 %> <%# increments href id of each collapse item %>
          <% end %>
        </div>
    </div>
