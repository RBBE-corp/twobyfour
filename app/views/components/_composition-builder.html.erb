

  <h3>1. Name your memory list</h3>
  <%= simple_form_for(@memory_list) do |f| %>
    <%= f.input :name, label: "Memory list name" %>
    <%= f.submit class: "btn btn-primary" %>

    <h4>Available memory lists</h4>
    <p>Newly added memory lists will appear here.</p>
    <%= render 'components/memory-lists-index' %>
  <% end %>

<h3>2. Add flashcards to your memory list</h3>
<%= simple_form_for(@flashcard) do |f| %>
  <%= f.input :english_word %>
  <%= f.input :japanese_word %>
  <%= f.input :category %>
  <%# <%= f.association :memory_list_flashcards %>
  <%= f.association :memory_lists, label: "Choose a memory list to store your flashcard"  %>
  <p>You can repeat the process to add more flashcards!</p>
  <%= f.submit 'Create a flashcard', class: "btn btn-primary" %>
<% end %>

<h3>3. Combine your memory list with an instrumental</h3>
<%= simple_form_for(@composition) do |f| %>
  <%= f.input :name %>
  <%= f.association :memory_list %>
  <%= f.association :instrumental %>
  <%= f.submit class: "btn btn-primary" %>
<% end %>
